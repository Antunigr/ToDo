@using Crud.Api.Models
@model IEnumerable<Tarefas>

@{
    ViewData["Index"] = "Home Page";
}

<h2>Meu dia</h2>
<p>segunda-feira, 11 de abril</p>
<form method="post" asp-controller="Home" asp-action="CreateTask">
    <input asp-for="@(new Tarefas().Tarefa)" class="form-control" type="text">
</form> 


@if (Model != null && Model.Any())
{
    @foreach (var item in Model)
    {
        <h4>@item.Tarefa</h4>
    }
}
else
{
    <p>Não há tarefas cadastradas</p>
}